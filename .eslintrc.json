{
  "root": true,
  "env": { "browser": true, "es2022": true, "node": true },
  "extends": ["standard"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  },
  "overrides": [
    {
      "files": ["web/**/*.tsx", "web/**/*.ts", "web/**/*.jsx", "web/**/*.js"],
      "env": { "browser": true },
      "parserOptions": { "ecmaFeatures": { "jsx": true } }
    }
  ]
}
